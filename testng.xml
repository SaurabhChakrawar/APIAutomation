<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="APIAutomationSuite" parallel="tests" thread-count="3">
  <listeners>
    <listener class-name="utils.ExtentTestListener"/>
  </listeners>
  <test name="Auth Tests">
    <classes>
      <class name="tests.AuthTests"/>
    </classes>
  </test>
  <test name="Schema Validation Tests">
    <classes>
      <class name="tests.SchemaValidationTests"/>
    </classes>
  </test>
  <test name="User API Tests">
    <classes>
      <class name="tests.UserTests"/>
    </classes>
  </test>
</suite>


